<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/log_common_margin"
    android:background="@color/log_button_color"
    android:orientation="horizontal"
    android:paddingHorizontal="6dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/keyword_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableStart="@drawable/ic_log_keyword_search"
        android:drawablePadding="6dp"
        android:hint="@string/log_input_keyword"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/keyword_clear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_log_keyword_clear" />

</androidx.appcompat.widget.LinearLayoutCompat>
