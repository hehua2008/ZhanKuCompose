<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZhanKuKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarSize">@dimen/actionbar_height</item>
        <item name="actionBarStyle">@style/Widget.ZhanKuKotlin.ActionBar</item>
    </style>

    <style name="Theme.ZhanKuKotlin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ZhanKuKotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ZhanKuKotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.ZhanKuKotlin.ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="android:minHeight">@dimen/actionbar_height</item>
    </style>

    <style name="Widget.ButtonGroupRecyclerView" parent="@android:style/Widget">
        <item name="singleSelection">false</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Button.Common" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:minHeight">@dimen/button_min_height</item>
        <item name="android:paddingLeft">@dimen/button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/common_text_size</item>
        <item name="backgroundTint">@color/button_color</item>
    </style>
</resources>
