<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/common_horizontal_margin"
    android:background="@drawable/box_common_bg"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/keyword_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableStart="@drawable/ic_keyword_search"
        android:drawablePadding="6dp"
        android:hint="@string/input_keyword"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="@android:color/darker_gray" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/keyword_clear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_keyword_clear" />

</androidx.appcompat.widget.LinearLayoutCompat>
