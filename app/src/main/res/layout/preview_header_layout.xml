<?xml version="1.0" encoding="utf-8"?>
<com.hym.zhankukotlin.ui.main.PreviewHeaderLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preview_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/activity_vertical_padding">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/category_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_horizontal_margin"
        android:layout_marginBottom="@dimen/common_vertical_margin"
        android:autoLink="web"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="https://www.zcool.com.cn/discover?"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toTopOf="@id/cat_recrcler"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="@dimen/common_vertical_margin" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/cat_recrcler"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cat_recrcler"
        app:srcCompat="?attr/colorSurface" />

    <com.hym.zhankukotlin.ui.ButtonGroupRecyclerView
        android:id="@+id/cat_recrcler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:checkedButtonPos="0"
        app:layout_constraintBottom_toTopOf="@id/order_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_link"
        app:selectionRequired="true"
        app:singleSelection="true"
        app:spanCount="4" />

    <RadioGroup
        android:id="@+id/order_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/second_order_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cat_recrcler">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/order_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:minHeight="@dimen/button_min_height"
            android:text="编辑精选" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/order_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/button_min_height"
            android:text="全部推荐" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/order_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/button_min_height"
            android:text="首页推荐" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/order_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/button_min_height"
            android:text="最新发布" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/second_order_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/paged"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_group"
        tools:visibility="visible">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/second_order_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:minHeight="@dimen/button_min_height"
            android:text="最佳匹配" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/second_order_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/button_min_height"
            android:text="时间最新" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/second_order_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/button_min_height"
            android:text="推荐最多" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/second_order_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/button_min_height"
            android:text="评论最多" />
    </RadioGroup>

    <include
        android:id="@+id/paged"
        layout="@layout/paged_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_group" />
</com.hym.zhankukotlin.ui.main.PreviewHeaderLayout>
