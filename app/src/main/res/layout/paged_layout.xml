<?xml version="1.0" encoding="utf-8"?>
<com.hym.zhankukotlin.ui.PagedLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:visibility="visible">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pre_page"
        style="@style/Widget.Button.Common"
        android:text="上页"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/active_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:paddingHorizontal="5dp"
        android:text="1"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="..."
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/last_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:paddingHorizontal="5dp"
        android:text="2"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_page"
        style="@style/Widget.Button.Common"
        android:text="下页"
        android:visibility="visible" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/number_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:text="2"
        android:textSize="15sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/jump_button"
        style="@style/Widget.Button.Common"
        android:text="跳转" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/page_size_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="每页"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/page_size_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/box_common_bg"
        android:entries="@array/page_sizes"
        android:spinnerMode="dropdown"
        android:visibility="gone"
        tools:visibility="visible" />

</com.hym.zhankukotlin.ui.PagedLayout>
